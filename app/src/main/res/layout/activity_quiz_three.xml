<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="189dp"
        android:layout_height="165dp"
        app:srcCompat="@drawable/cra"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question 3/5"
        android:textStyle="bold"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="15dp"
        android:id="@+id/quest_title"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What is the default local host port that a React development server uses?"
        android:layout_below="@+id/quest_title"
        android:layout_marginTop="5dp"
        android:textSize="22dp"
        android:gravity="center"
        android:id="@+id/quest"
        />

    <CheckBox
        android:id="@+id/radioButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3000"
        android:layout_below="@+id/quest"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        />
    <CheckBox
        android:id="@+id/radioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3500"
        android:layout_below="@+id/radioButton1"
        android:layout_marginLeft="30dp"
        android:textColor="#000000"
        />
    <CheckBox
        android:id="@+id/radioButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5000"
        android:layout_below="@+id/radioButton2"
        android:layout_marginLeft="30dp"
        android:textColor="#000000"
        />
    <CheckBox
        android:id="@+id/radioButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8080"
        android:layout_below="@+id/radioButton3"
        android:layout_marginLeft="30dp"
        android:textColor="#000000"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButton4"
        android:gravity="center"
        android:layout_marginTop="20dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous"
            android:layout_marginTop="30dp"
            android:id="@+id/previous"
            android:layout_margin="15dp"
            android:backgroundTint="#902196F3"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_marginTop="30dp"
            android:id="@+id/next"
            android:layout_margin="15dp"
            android:backgroundTint="#2196F3"
            />
    </LinearLayout>
</RelativeLayout>